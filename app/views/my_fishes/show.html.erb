
<div class="my-fish-container" style=" height: calc(100vh - 57px);
">
  <div class="my-fish-show-card card">
    <%= image_tag "myfish_#{@my_fish.fish.red_list_id.to_s}.svg", class: "centered", width:"50%"%>
    <div class="centered-element">
     <h2><%= @my_fish.name.upcase%></h2>
    </div>
    <div class="fish-show-card-body">
      <div>
        <p><strong style="font-weight: 700";>Species:</strong><br><%= @my_fish.fish.breed %></p>
      </div>
      <div>
        <p><strong style="font-weight: 700";>Location:</strong><br><%= @my_fish.fish.location %></p>
      </div>
      <div>
        <p><strong style="font-weight: 700";>Age:</strong><br><%= pluralize(@my_fish.age, 'year') %> old</p>
      </div>
    </div>
    <div class="my-fish-bar">
    <div class="container">
      <div>
        <p><strong style="font-weight: 700";>HEALTH</strong></p>
        <div class="progress">
          <div class="bar text-center health-bar" style="width: <%= @my_fish.score_health %>%">
            <%= @my_fish.score_health %> %
          </div>
        </div>
      </div>
      <div class="happiness-bar"><p>
        <strong style="font-weight: 700";>HAPPINESS</strong><br></p><div class="happiness-stars">
          <% @my_fish.score_happiness.to_i.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% if @my_fish.score_happiness%1 > 0 %>
            <i class="fas fa-star-half-alt"></i>
          <% end %>
          <% (5 - @my_fish.score_happiness).to_i.times do %>
            <i class="far fa-star"></i>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>

</div>



</div>

<%= render "shared/navbar", locals: {my_fish: @my_fish} %>

<div class="bubbles bubble-1"></div>
<div class="bubbles bubble-2"></div>
<div class="bubbles bubble-3"></div>
<div class="bubbles bubble-4"></div>
<div class="bubbles bubble-5"></div>
<div class="bubbles bubble-6"></div>
<div class="bubbles bubble-7"></div>
<div class="bubbles bubble-8"></div>


<% if MyFish.where(alive: true).count == 0 %>
  <%= render "shared/msg_your_fish_died" %>
  <script>
    document.querySelector('.fish-modal').classList.toggle('show-modal')
  </script>
<% end %>

