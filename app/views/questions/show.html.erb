
<p> <%= @question.content %></p>

<fieldset class="form-group check_boxes answers">
  <% @answers.each do |answer| %>
     <div class="form-check answer" data-id="<%= answer.id %>">
        <input class="form-check-input check_boxes optional hidden-checkbox" type="checkbox" value="<%= answer.status %>" name="answer" id="<%= @challenge.name %>_answer_<%= answer.id %>">
        <label class="collection_check_boxes" for="<%= @challenge.name %>_answer_<%= answer.id %>"><%= answer.content %></label>
    </div>
  <% end %>
</fieldset>

<div class="message">
  <p class="motivation_message"></p>
</div>

<% if @last_question_id != @question.id %>
  <%= link_to "Next question", challenge_question_path(@challenge, @question.id + 1), class: "next-q-btn", style: "display: none"  %>
<% else %>
  <%= link_to "End the quizz", challenges_path %>
<% end %>

