<div class="footer-navbar d-flex justify-content-around align-items-center">
  <div class="nav-item">
    <% if MyFish.where(alive: true).count == 0 %>
    <%= link_to fishes_path , class: "#{ controller_name == "fishes" ? 'active-tab' : "inactive-tab" } yo d-flex justify-content-center align-items-center flex-column" do %>
    <i class="fas fa-fish"></i>
    <p class="nav-link-footer py-0">Adopt a Fish</p>
    <% end %>
    <% else %>
    <%= link_to my_fish_path(@my_fish), class: "#{ controller_name == "my_fishes" ? 'active-tab' : "inactive-tab" } yo d-flex justify-content-center align-items-center flex-column" do %>
    <i class="fas fa-fish"></i>
    <p class="nav-link-footer py-0">MyFish</p>
    <% end %>
    <% end %>
  </div>
  <div class="nav-item">
    <%= link_to my_challenges_path, class: "#{ controller_name == "my_challenges" ? 'active-tab' : "inactive-tab" } d-flex justify-content-center align-items-center flex-column" do %>
    <i class="fas fa-tasks"></i>
    <p class="nav-link-footer py-0">Challenges</p>
    <% end %>
  </div>
  <div class="nav-item">
    <%= link_to "/impact", class: "#{ controller_name == "impact" ? 'active-tab' : "inactive-tab" } d-flex justify-content-center align-items-center flex-column" do %>
    <i class="fas fa-tree"></i>
    <p class="nav-link-footer py-0">Impact</p>
    <% end %>
  </div>
  <div class="nav-item">
    <%= link_to profile_path, class: "#{ controller_name == "profile" ? 'active-tab' : "inactive-tab" } d-flex justify-content-center align-items-center flex-column" do %>
      <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
      <% if current_user.facebook_picture_url %>
        <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu" %>
        <p class="nav-link-footer py-0">Profile</p>
      <% elsif current_user.avatar %>
        <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu" %>
        <p class="nav-link-footer py-0">Profile</p>
      <% else %>
        <i class="fas fa-user"></i>
        <p class="nav-link-footer py-0">Profile</p>
      <% end %>
    <% end %>
  </div>
</div>

