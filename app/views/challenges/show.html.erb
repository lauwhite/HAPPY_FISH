<h1><%= @challenge.name %></h1>
<p><%= @challenge.challenge_category.name %></p>

<%#= " This challenge will bring you #{@challenge.health_score} points"  %>

<%= @challenge.description %>

<br>

<%= link_to "No thanks", challenges_path %>

<% if   @challenge.challenge_type.name == "Quizz" %>
  <%= link_to " Let's do it!", challenge_question_path(@challenge.id,@challenge.questions.first.id)  %>
  <% elsif @challenge.duration == "Daily" %>
  <%= link_to "I have completed this!", completed_challenge_path(@challenge.id)%>
  <% else %>
  <%= link_to "Let's do it !", challenge_my_challenges_path(@challenge), method: :post%>
<% end %>
