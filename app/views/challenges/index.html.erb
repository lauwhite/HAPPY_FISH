<div class="container-fluid">

  <h1 class="main-title">CHALLENGES</h1>

  <h2 class="section-title">ONE DAY</h2>

  <div class="scrolling-wrapper">

    <% @daily_challenges.each do |daily_challenge| %>

    <%= link_to challenge_path(daily_challenge.id) do %>
    <div class="challenge-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= daily_challenge.challenge_category.image %>)">
      <%= daily_challenge.name %>
    </div>
    <% end %>
    <% end %>
  </div>

  <h2 class="section-title">ONE WEEK</h2>

  <div class="scrolling-wrapper">
    <% @weekly_challenges.each do |weekly_challenge| %>
    <%= link_to challenge_path(weekly_challenge.id) do %>
    <div class="challenge-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= weekly_challenge.challenge_category.image %>)">
      <%= weekly_challenge.name %>
    </div>
    <% end %>
    <% end %>
  </div>

  <h2 class="section-title">ONE MONTH</h2>

  <div class="scrolling-wrapper">
    <% @monthly_challenges.each do |monthly_challenge| %>
    <%= link_to challenge_path(monthly_challenge.id) do %>
    <div class="challenge-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= monthly_challenge.challenge_category.image %>)">
      <%= monthly_challenge.name %>
    </div>
    <% end %>
    <% end %>
  </div>

  <h2 class="section-title">ANOTHER TRY?</h2>

  <div class="scrolling-wrapper">

    <% @abandoned_challenges.each do |daily_challenge| %>

    <%= link_to challenge_path(daily_challenge.id) do %>
    <div class="challenge-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= daily_challenge.challenge_category.image %>)">
      <%= daily_challenge.name %>
    </div>
    <% end %>
    <% end %>
  </div>

  <h2 class="section-title">REPETITION MAKES YOU A MASTER!</h2>

  <div class="scrolling-wrapper">

    <% @repeatable_challenges.each do |daily_challenge| %>

    <%= link_to challenge_path(daily_challenge.id) do %>
    <div class="challenge-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= daily_challenge.challenge_category.image %>)">
      <%= daily_challenge.name %>
    </div>
    <% end %>
    <% end %>
  </div>

</div>

<% if MyFish.where(alive: true).count == 0 %>
<%= render "shared/msg_need_to_adopt_a_fish" %>
    <script>
      document.querySelector('.fish-modal').classList.toggle('show-modal')
    </script>
<% end %>

